<openerp>
  <data>

    <!-- frontend assets -->
    <template id="assets_frontend" inherit_id="website.assets_frontend" name="Groupme">
      <xpath expr="." position="inside">
        <title>Websites build with Odoo CMS</title>
        <link type="text/less" href="/odoo_website/static/src/less/odoo_website.less" rel="stylesheet" t-ignore="true"/>
        <link type="text/less" href="/odoo_website/static/src/css/owl.carousel.css" rel="stylesheet"/>
        <link type="text/less" href="/odoo_website/static/src/css/owl.theme.css" rel="stylesheet"/>

        <script type="text/javascript" src="/odoo_website/static/src/js/odoo_website.js"></script>
        <script type="text/javascript" src="/odoo_website/static/src/js/owl.carousel.js"></script>
      </xpath>
    </template>

    <!-- display list of groups --> 
    <template id="website_list">
      <t t-call="website.layout">
        <section>
          <div class="oe_structure"/>
          <div class="container mt16">
            <div class="row">
              <div t-foreach="websites" t-as="odoo_website" class="col-sm-3 col-md-3">
                <div class="thumbnail">
                  <a t-attf-href="/websites/view/#{odoo_website.id}">
                    <div class="group-image" t-attf-style="background: url('/website/image/odoo.website/#{odoo_website.id}/image');">
                    </div>
                  </a>
                  <div class="caption">
                    <h4 t-esc="odoo_website.name" class="oe_textoverflow"/>
                    <a t-attf-href="http://#{odoo_website.url}"><p t-esc="odoo_website.url"/></a>
                    <!-- <p t-esc="odoo_website.description"/> -->
                  </div>
                </div>
              </div>
            </div>
          </div>
        </section>
      </t>
    </template>
 
    <template id="view">
      <t t-call="website.layout">
        <section class="mt16">
          <div class="container">
            <div class="row">
              <div class="col-md-6 col-xs-12">
                <img t-attf-src="#{odoo_website.base_url}/logo.png" class="img img-responsive"/>
                <h2 t-esc="odoo_website.name"/>
                <p t-esc="odoo_website.description"/>

                <div class="alert alert-info" role="alert">
                  <i class="fa fa-info-circle fa-2x"></i>
                  We are processing your website for Google PageSpeed Insights, Please check after some times.
                </div>

              </div>
              <div class="col-md-5 col-xs-9">
                <!-- <img t-attf-src="/website/image/odoo.website/#{odoo_website.id}/image" class="img img-responsive" style="width: 100%;"/> -->
                <div id="o_responsive_mockup_screens">
                    <div class="desktop">
                        <img class="back" src="/odoo_website/static/img/large-screen-optimised.png" />
                        <img class="screen" t-att-src="odoo_website.is_image and '/website/image/odoo.website/' + str(odoo_website.id) + '/image' or '/odoo_website/static/img/desktop.png'" />
                        <t t-if="not odoo_website.is_image">
                          <img class="img_loader" src="/odoo_website/static/img/loader.gif" t-att-data-id="odoo_website.id" t-attf-data-src="/website/image/odoo.website/#{odoo_website.id}/image"/>
                        </t>
                    </div>
                    <div class="mobile">
                        <img class="back" src="/odoo_website/static/img/iphone-optimised.png" />
                        <img class="screen" t-att-src="odoo_website.is_image_mobile and '/website/image/odoo.website/' + str(odoo_website.id) + '/image_mobile' or '/odoo_website/static/img/mobile.png'" />
                        <t t-if="not odoo_website.is_image_mobile">
                          <img class="img_loader" src="/odoo_website/static/img/loader.gif" t-att-data-id="odoo_website.id" t-attf-data-src="/website/image/odoo.website/#{odoo_website.id}/image_mobile"/>
                        </t>
                    </div>
                    <div class="tablet">
                        <img class="back" src="/odoo_website/static/img/ipad-optimised.png" />
                        <img class="screen" t-att-src="odoo_website.is_image_tablet and '/website/image/odoo.website/' + str(odoo_website.id) + '/image_tablet' or '/odoo_website/static/img/tablet.png'" />
                        <t t-if="not odoo_website.is_image_tablet">
                          <img class="img_loader" src="/odoo_website/static/img/loader.gif" t-att-data-id="odoo_website.id" t-attf-data-src="/website/image/odoo.website/#{odoo_website.id}/image_tablet"/>
                        </t>
                    </div>  
                    <div class="laptop">
                        <img class="back" src="/odoo_website/static/img/laptop-screen-optimised.png" />
                        <img class="screen" t-att-src="odoo_website.is_image_laptop and '/website/image/odoo.website/' + str(odoo_website.id) + '/image_laptop' or '/odoo_website/static/img/laptop.png'" />
                        <t t-if="not odoo_website.is_image_laptop">
                          <img class="img_loader" src="/odoo_website/static/img/loader.gif" t-att-data-id="odoo_website.id" t-attf-data-src="/website/image/odoo.website/#{odoo_website.id}/image_laptop"/>
                        </t>
                    </div>
                    <div class="back_spaceing">
                        <img class="back" src="http://ami.responsivedesign.is/images/large-screen-optimised.png" />
                    </div>
                </div>
                <div class="col-md-1">
                </div>
              </div>
            </div>
          </div>
        </section>
      </t>
    </template>

    <!-- display list of groups --> 
    <template id="websites">
      <t t-call="website.layout">

        <section class="vertical-center" style="background-color:#EEE;">
          <div class="container">
            <div class="row">
              <div class="col-md-8 col-md-offset-2">
                <h3 class="text-center">
                  <span class="o_logo"><span class="o_logo_main">odoo</span><span class="o_logo_app"> cms</span></span>
                </h3>

                <h3 class="text-muted text-center o_default_snippet_text">Submit a website built with odoo cms</h3>
                <form method="post" action="/websites/new">
                <div class="input-group col-md-12">
                    <input type="text" name="website" class="form-control" placeholder="www.odoo.com"/>
                    <span class="input-group-btn">
                      <button class="btn btn-primary" type="submit"><i class="fa fa-arrow-right"></i> Submit</button>
                    </span>
                </div>
                </form>
                <div class="col-md-2">

                </div>
              </div>
              <div class="col-md-8 col-md-offset-2 mt16">
                <p class="small text-center">Submit a website build with odoo.com, it will be visible to users of odoowebsites.com. By clicking on submit button you accept the <a href="#">Terms and Conditions</a>.</p>
                <p t-esc="status"/>
              </div>
            </div>
          </div>
        </section>

        <!-- <hr class="s_separator"/> -->

        <section class="vertical-center mt16">
          <div class="container">
            <div class="row mb16">
              <div class="col-md-12 col-xs-12">
                <h1 class="text-center o_default_snippet_text">They use odoo cms in production </h1>
                <h3 class="text-muted text-center o_default_snippet_text">thousands of beautiful websites</h3>
              </div>
              <div id="owl-demo" class="col-md-12 mt32" style="overflow: hidden;">
                <div t-foreach="websites" t-as="odoo_website" class="item">
                  <a t-attf-href="/websites/view/#{odoo_website.id}">
                    <img t-attf-src="/website/image/odoo.website/#{odoo_website.id}/image" class="img img-responsive shadow" alt="Owl Image"/>
                  </a>
                </div>
              </div>
            </div>
          </div>
        </section>

        <!-- <section id="section-statistics" class="content bg-color-1">
        <div class="container">
          <div class="row">
