<templates id="template_joingroup" xml:space="preserve">
    <t t-name="groupme.joingroup" name="network">
            <div class="modal" role="dialog" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <a class="close" data-dismiss="modal" aria-hidden="true">
                            <span class="fa fa-times"></span>
                        </a>
                        <h3 class="modal-title" href="">Join Group</h3>
                    </div>
                    <div class="oe_network_joining text-center" style="display:none">
                        <h4><i class='fa fa-spinner fa-spin'></i> Joining Group...  </h4>
                    </div>
                    <div class="modal-body">
                    <div class="alert alert-warning" id="resultErrorMessage" style="display:none" role="alert"></div>
                        <form class="clearfix form-horizontal" id="joingroupform" method="POST">
                            <div class="form-group">
                                <label for="name" class="control-label col-sm-2 pr0">Email Id</label>
                                <div class="col-sm-10 pl8">
                                <input id="email" name="email" placeholder="Email Address" class="form-control" required="required" autofocus="true"/>
                                </div>
                            </div>
                            <canvas id="data_canvas" style="display: none;"></canvas>
                        </form>
                    </div>
                    <div class="modal-footer">
                        <button type="button" data-loading-text="Loading..." class="btn btn-primary oe_js_joingroup save" id="joingroupbutton">Join Group</button>
                        or
                        <a href="#" data-dismiss="modal" aria-hidden="true">Cancel</a>
                    </div>
                </div>
            </div>
        </div>
    </t>
</templates>