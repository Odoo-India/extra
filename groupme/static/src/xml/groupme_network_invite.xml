<templates id="template_invite" xml:space="preserve">
    <t t-name="groupme.invite">
        <div class="modal" tabindex="-1" role="dialog" aria-hidden="true">
            <div class="modal-dialog modal-lg">
                <div class="modal-content">
                    <div class="modal-header">
                        <a class="close" data-dismiss="modal" aria-hidden="true">
                            <span class="fa fa-times"></span>
                        </a>
                        <h3 class="modal-title">Invite People</h3>
                    </div>
                    <div class="oe_people_inviting text-center" style="display:none">
                        <h4><i class='fa fa-spinner fa-spin'></i> Inviting...  </h4>
                    </div>
                    
                    <div class="modal-body">
                        <div class="" style="">
                            <form class="clearfix form-horizontal">
                                <label for="email_ids" class="">Email Addresses</label>
                                <div class="">
                                    <input id="email_ids" name="email_ids" placeholder="Invite people by email address or mobile key" class="form-control col-sm-10" required="required"/>
                                </div>
                                <canvas id="data_canvas" style="display: none;"></canvas>
                            </form>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" data-loading-text="Loading..." class="btn btn-primary save">Send Invitation</button>
                         or 
                        <a href="#" data-dismiss="modal" aria-hidden="true">Discard</a>
                    </div>
                </div>
            </div>
        </div>
    </t>
</templates>
